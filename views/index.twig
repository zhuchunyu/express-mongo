{% extends 'layout.twig' %}

{% block body %}
    <p><a href="/add">添加用户</a></p>

    <h1>用户列表</h1>
    <table>
        <thead>
        <tr>
            <td>用户名</td>
            <td>密码</td>
            <td>创建日期</td>
            <td>操作</td>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
            <td>{{ user.name }}</td>
            <td>{{ user.password }}</td>
            <td>{{ user.created }}</td>
            <td><a href="/delete/{{ user._id }}">删除</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
